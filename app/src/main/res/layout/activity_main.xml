<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Pergunta"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Qual seu nome?"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/InserirNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>


    <EditText
        android:id="@+id/InserirNome"
        android:layout_width="200sp"
        android:layout_height="50dp"
        android:hint="@string/inserir_nome"
        app:layout_constraintBottom_toTopOf="@+id/Mensagem"
        app:layout_constraintTop_toBottomOf="@id/Pergunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.325" />

    <TextView
        android:id="@+id/Mensagem"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="@string/qual_seu_nome"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/Ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InserirNome"

        />


    <Button
        android:id="@+id/Ok"
        android:layout_width="95sp"
        android:layout_height="wrap_content"
        android:text="Ok"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/Limpar"
        app:layout_constraintTop_toBottomOf="@+id/Mensagem"
        app:layout_constraintVertical_bias="0.489"/>

    <Button
        android:id="@+id/Limpar"
        android:layout_width="95sp"
        android:layout_height="wrap_content"
        android:text="Limpar"
        app:layout_constraintEnd_toEndOf="@id/Ok"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mensagem"
        app:layout_constraintVertical_bias="0.489" />


</androidx.constraintlayout.widget.ConstraintLayout>